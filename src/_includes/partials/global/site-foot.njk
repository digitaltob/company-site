<footer role="contentinfo" class="[ pad-top-700 pad-bottom-900 bg-rsd-primary ]">
  <div class="wrapper">
    <div class="[ site-foot__inner ] [ md:box-flex space-between align-start color-light ]">
      {% if site.shortDesc %}
        <div>
          <article class="[ site-foot__details ] [ sf-flow measure-compact ]">
            <h2 class="font-base text-600">{{ site.name }}</h2>
            {{ site.shortDesc | markdownFilter | safe }}
          </article>
        </div>
      {% endif %}
      <div>
        {% include "partials/components/nav.njk" %}
        <!-- <theme-toggle></theme-toggle> -->
      </div>
    </div>
    {% if site.showThemeCredit %}
      <p class="[ site-foot__credit ] [ pad-top-900  color-light ]">
        &copy; 2020 Red Spark Digital Ltd.<br>
        Registered in England &amp; Wales. Company No: 08865348
      </p>
    {% endif %}
  </div>
</footer>
